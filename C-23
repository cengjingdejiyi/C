//将一个一维数组 a[9] 中各元素的值按行的顺序放入二维数组 b[3][3] 中。
#include<stdio.h>
int main(){
    int a[9]={1,2,3,4,5,6,7,8,9};
	int b[3][3];
	for(int x=0;x<3;x++){//数组索引值从0开始，如a[0]代表数
	                     //组a中的第一个元素，以此类推 
		b[0][x]=a[x];
		b[1][x]=a[x+3];
		b[2][x]=a[x+6];
	}
	printf("%d,%d,%d\n",b[0][0],b[0][1],b[0][2]);
	printf("%d,%d,%d\n",b[1][0],b[1][1],b[1][2]);
	printf("%d,%d,%d\n",b[2][0],b[2][1],b[2][2]);
    return 0;
}
//结果： 
// 1,2,3
//4,5,6
//7,8,9
